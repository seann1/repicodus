<h1>New Chapter</h1>

<% if @chapter.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @chapter.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="." method="post">
  <label for="chapter_description">description</label>
  <input id="chapter_description" name="description" type="text">

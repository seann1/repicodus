<div class="container">

<h1 class="jumbotron">Update Chapter for <%= @chapter.description %></h1>

  <% if @chapter.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
    <% @chapter.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
  <% end %>


<form action="/tomes/<%= @tome_id %>/chapters/<%= @chapter.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="number">Number</label>
  <input class="form-control" id="number" name="number" type="text" value="<%= @chapter.number %>">

  <label for="tome_id">Tome ID</label>
  <input class="form-control" id="tome_id" name="tome_id" type="text" value="<%= @chapter.tome_id %>">

  <label for="description">Description</label>
  <input class="form-control" id="description" name="description" type="text" value="<%= @chapter.description %>">
  <br>

  <button type="button" class="btn btn-success"><a href="/">HOME</a></button>
</form>
</div>

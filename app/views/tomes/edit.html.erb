<div class="container">

<h1 class="jumbotron">Update Tome for <%= @tome.description %></h1>

  <% if @tome.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
    <% @tome.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
  <% end %>


<form class="form-horizontal" action="/tomes/<%= @tome.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="number">Number</label>
  <input class="form-control" id="number" name="number" type="text" value="<%= @tome.number %>">

  <label for="description">Description</label>
  <input class="form-control" id="description" name="description" type="text" value="<%= @tome.description %>">
  <br>

  <button type="submit" class="btn btn-success">Update Tome</button>
</form>

</div>

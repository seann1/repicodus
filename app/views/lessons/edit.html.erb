<div class="container">

<h1 class="jumbotron">Update Lesson for <%= @lesson.description %></h1>

  <% if @lesson.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
  <% end %>


<form action="." method="post">
  <input name="_method" type="hidden" value="patch"></input>

  <label for="number">Number</label>
  <input class="form-control" id="number" name="number" type="text" value="<%= @lesson.number %>"></input>

  <label for="chapter_id">Chapter ID</label>
  <input class="form-control" id="chapter_id" name="chapter_id" type="text" value="<%= @lesson.chapter_id %>"></input>

  <label for="description">Description</label>
  <input class="form-control" id="description" name="description" type="text" value="<%= @lesson.description %>"></input>
  <br/>

  <label for="content">Content Text</label>
  <br/>
  <textarea class="text-area" id="content" name="content" type="text" value="<%= @lesson.content %>"></textarea>
  <br/>
  <br/>
  <button type="submit" class="btn btn-success">Update Lesson</button>
</form>
<br/>
<button type="button" class="btn btn-success"><a href="/">HOME</a></button>
</div>


